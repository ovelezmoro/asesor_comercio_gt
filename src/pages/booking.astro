---
import BaseLayout from "../layouts/BaseLayout.astro";
import PageHero from "../components/PageHero.astro";
---

<BaseLayout title="ASESORES EN COMERCIO GT S.A.C. | Cotizaci&oacute;n" active="booking">
  <PageHero
    title="Cotizaci&oacute;n"
    breadcrumbLabel="Cotizaci&oacute;n"
    backgroundImage="/assets/images/hero_bg_5.jpg"
  />

  <div class="site-section bg-light">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-7">
          <div class="bg-white p-4 p-md-5">
            <h2 class="text-primary mb-4">Solicitar cotizaci&oacute;n</h2>
            <form action="#" method="post">
              <div class="form-group">
                <label for="bk_name">Nombre</label>
                <input type="text" id="bk_name" class="form-control" placeholder="Tu nombre">
              </div>
              <div class="form-group">
                <label for="bk_email">Correo</label>
                <input type="email" id="bk_email" class="form-control" placeholder="Tu correo">
              </div>
              <div class="form-group">
                <label for="bk_service">Servicio</label>
                <select id="bk_service" class="form-control">
                  <option value="">Selecciona un servicio</option>
                  <option value="air">Transporte a&eacute;reo</option>
                  <option value="ocean">Transporte mar&iacute;timo</option>
                  <option value="ground">Transporte terrestre</option>
                  <option value="warehouse">Almacenaje</option>
                  <option value="storage">Seguro de carga</option>
                </select>
              </div>
              <div class="form-group">
                <label for="bk_message">Detalles</label>
                <textarea id="bk_message" class="form-control" rows="5" placeholder="Cu&eacute;ntanos sobre tu embarque"></textarea>
              </div>
              <div class="form-group mb-0">
                <button type="submit" class="btn btn-primary text-white py-2 px-4">Enviar solicitud</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
