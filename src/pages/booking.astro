---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Booking | Logistics" active="booking">
  <div class="site-blocks-cover inner-page-cover overlay" style="background-image: url(/assets/images/hero_bg_1.jpg);" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
      <div class="row align-items-center justify-content-center text-center">
        <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
          <h1 class="text-white font-weight-light text-uppercase font-weight-bold">Booking</h1>
          <p class="breadcrumb-custom"><a href="/">Home</a> <span class="mx-2">&gt;</span> <span>Booking</span></p>
        </div>
      </div>
    </div>
  </div>

  <div class="site-section bg-light">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-7">
          <div class="bg-white p-4 p-md-5">
            <h2 class="text-primary mb-4">Request a Booking</h2>
            <form action="#" method="post">
              <div class="form-group">
                <label for="bk_name">Name</label>
                <input type="text" id="bk_name" class="form-control" placeholder="Your Name">
              </div>
              <div class="form-group">
                <label for="bk_email">Email</label>
                <input type="email" id="bk_email" class="form-control" placeholder="Your Email">
              </div>
              <div class="form-group">
                <label for="bk_service">Service</label>
                <select id="bk_service" class="form-control">
                  <option value="">Select a service</option>
                  <option value="air">Air Freight</option>
                  <option value="ocean">Ocean Freight</option>
                  <option value="ground">Ground Shipping</option>
                  <option value="warehouse">Warehousing</option>
                  <option value="storage">Storage</option>
                </select>
              </div>
              <div class="form-group">
                <label for="bk_message">Details</label>
                <textarea id="bk_message" class="form-control" rows="5" placeholder="Tell us about your shipment"></textarea>
              </div>
              <div class="form-group mb-0">
                <button type="submit" class="btn btn-primary text-white py-2 px-4">Send Request</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
