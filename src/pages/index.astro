---
import BaseLayout from "../layouts/BaseLayout.astro";
import Testimonials from "../components/Testimonials.astro";
import NewsSection from "../components/NewsSection.astro";
import OfferingsSection from "../components/OfferingsSection.astro";
import MoreServicesSection from "../components/MoreServicesSection.astro";
import VideoSection from "../components/VideoSection.astro";
import StatsBanner from "../components/StatsBanner.astro";

const newsItems = [
  {
    imageSrc: "/assets/images/blog_1.jpg",
    imageAlt: "Checklist de importacion",
    title: "Checklist para tu primera importaci&oacute;n",
    meta: "por Equipo ACGT <span class=\"mx-2\">&bullet;</span> Feb 8, 2026 <span class=\"mx-2\">&bullet;</span> <a href=\"#\">Gu&iacute;a</a>",
    excerpt: "Revisa documentos, incoterms y plazos antes de embarcar.",
    href: "#",
  },
  {
    imageSrc: "/assets/images/blog_2.jpg",
    imageAlt: "Costos y tiempos",
    title: "Costos y tiempos en transporte a&eacute;reo",
    meta: "por Equipo ACGT <span class=\"mx-2\">&bullet;</span> Feb 8, 2026 <span class=\"mx-2\">&bullet;</span> <a href=\"#\">Log&iacute;stica</a>",
    excerpt: "Comparativas de rutas, consolidaci&oacute;n y entregas urgentes.",
    href: "#",
  },
];
---

<BaseLayout title="ASESORES EN COMERCIO GT S.A.C. | Inicio" active="home">
<div class="site-blocks-cover overlay" style="background-image: url(/assets/images/hero_bg_5.jpg);" data-aos="fade" data-stellar-background-ratio="0.5">
      <div class="container">
        <div class="row align-items-center justify-content-center text-center">

          <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
            
            <h1 class="text-white font-weight-light mb-5 text-uppercase font-weight-bold"><span class="text-black">importar y exportar con seguridad total</span></h1>
            <p><a href="/quotation" class="btn btn-primary py-3 px-5 text-white">Cotizar ahora</a></p>

          </div>
        </div>
      </div>
    </div>  

    <StatsBanner />

    <div class="container d-none">
      <div class="row align-items-center no-gutters align-items-stretch overlap-section">
        <div class="col-md-4">
          <div class="feature-1 pricing h-100 text-center">
            <div class="icon">
              <span class="icon-dollar"></span>
            </div>
            <h2 class="my-4 heading">Tarifas competitivas</h2>
            <p>Optimizamos costos de flete y tiempos con opciones a la medida.</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="free-quote bg-dark h-100">
            <h2 class="my-4 heading  text-center">Solicita una cotizaci&oacute;n</h2>
            <form method="post">
              <div class="form-group">
                <label for="fq_name">Nombre</label>
                <input type="text" class="form-control btn-block" id="fq_name" name="fq_name" placeholder="Ingresa tu nombre">
              </div>
              <div class="form-group mb-4">
                <label for="fq_email">Correo</label>
                <input type="text" class="form-control btn-block" id="fq_email" name="fq_email" placeholder="Ingresa tu correo">
              </div>
              <div class="form-group">
                <input type="submit" class="btn btn-primary text-white py-2 px-4 btn-block" value="Cotizar">  
              </div>
            </form>
          </div>
        </div>
        <div class="col-md-4">
          <div class="feature-3 pricing h-100 text-center">
            <div class="icon">
              <span class="icon-phone"></span>
            </div>
            <h2 class="my-4 heading">Acompa&ntilde;amiento 24/7</h2>
            <p>Seguimiento continuo de tus embarques y respuesta r&aacute;pida.</p>
          </div>
        </div>
      </div>
    </div>

  

    <div class="site-section block-13">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
      <div class="owl-carousel nonloop-block-13">
        <div>
          <a href="#" class="unit-1 text-center">
            <img src="/assets/images/img_1.jpg" alt="Image" class="img-fluid" fetchpriority="high" decoding="sync">
            <div class="unit-1-text">
              <h3 class="unit-1-heading">Almacenaje</h3>
              <p class="px-5">Recepci&oacute;n, control y preparaci&oacute;n de pedidos.</p>
            </div>
          </a>
        </div>

        <div>
          <a href="#" class="unit-1 text-center">
            <img src="/assets/images/img_2.jpg" alt="Image" class="img-fluid" fetchpriority="high" decoding="sync">
            <div class="unit-1-text">
              <h3 class="unit-1-heading">Carga a&eacute;rea</h3>
              <p class="px-5">Opciones premium y tiempos r&aacute;pidos.</p>
            </div>
          </a>
        </div>

        <div>
          <a href="#" class="unit-1 text-center">
            <img src="/assets/images/img_3.jpg" alt="Image" class="img-fluid" loading="lazy" decoding="async">
            <div class="unit-1-text">
              <h3 class="unit-1-heading">Carga proyecto</h3>
              <p class="px-5">Sobredimensionada, peligrosa y perecible.</p>
            </div>
          </a>
        </div>

        <div>
          <a href="#" class="unit-1 text-center">
            <img src="/assets/images/img_4.jpg" alt="Image" class="img-fluid" loading="lazy" decoding="async">
            <div class="unit-1-text">
              <h3 class="unit-1-heading">Carga mar&iacute;tima</h3>
              <p class="px-5">Salidas programadas y consolidaci&oacute;n.</p>
            </div>
          </a>
        </div>

        <div>
          <a href="#" class="unit-1 text-center">
            <img src="/assets/images/img_5.jpg" alt="Image" class="img-fluid" loading="lazy" decoding="async">
            <div class="unit-1-text">
              <h3 class="unit-1-heading">Distribuci&oacute;n</h3>
              <p class="px-5">Entregas coordinadas y &uacute;ltima milla.</p>
            </div>
          </a>
        </div>


      </div>
          </div>
        </div>
      </div>
    </div>


    

    <MoreServicesSection />


    <div class="site-section border-top">
      <div class="container">
        <div class="row text-center">
          <div class="col-md-12">
            <h2 class="mb-5 text-black">Cotiza tu operaci&oacute;n</h2>
            <p class="mb-0"><a href="/quotation" class="btn btn-primary py-3 px-5 text-white">Solicitar cotizaci&oacute;n</a></p>
          </div>
        </div>
      </div>
    </div>
</BaseLayout>
