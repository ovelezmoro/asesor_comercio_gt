---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout
  title="ASESORES EN COMERCIO GT S.A.C. | Cotización"
  active="booking"
>
  <div
    class="site-blocks-cover inner-page-cover overlay"
    style="background-image: url(/assets/images/hero_bg_1.jpg);"
    data-aos="fade"
    data-stellar-background-ratio="0.5"
  >
    <div class="container">
      <div class="row align-items-center justify-content-center text-center">
        <div class="col-md-8" data-aos="fade-up" data-aos-delay="400">
          <h1
            class="text-white font-weight-light text-uppercase font-weight-bold"
          >
            Cotizaci&oacute;n
          </h1>
          <p class="breadcrumb-custom">
            <a href="/">Inicio</a>
            <span class="mx-2">&gt;</span>
            <span>Cotizaci&oacute;n</span>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="site-section bg-light">
    <div class="px-5">
      <div class="row justify-content-center">
        <div class="col-md-12">
          <div class="bg-white p-4 p-md-5">
            <h2 class="text-primary mb-4">Solicitar cotizaci&oacute;n</h2>
            <form action="#" method="post">
              <div class="row">
                <div class="col-lg-6">
                  <h5 class="text-black mb-3">Servicio solicitado</h5>
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <div
                          class="custom-control custom-radio custom-control-inline"
                        >
                          <input
                            type="radio"
                            id="type_import"
                            name="service_type"
                            class="custom-control-input"
                            value="import"
                            checked
                          />
                          <label class="custom-control-label" for="type_import"
                            >Importaci&oacute;n</label
                          >
                        </div>
                        <div
                          class="custom-control custom-radio custom-control-inline"
                        >
                          <input
                            type="radio"
                            id="type_export"
                            name="service_type"
                            class="custom-control-input"
                            value="export"
                          />
                          <label class="custom-control-label" for="type_export"
                            >Exportaci&oacute;n</label
                          >
                        </div>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <div
                          class="custom-control custom-radio custom-control-inline"
                        >
                          <input
                            type="radio"
                            id="mode_air"
                            name="transport_mode"
                            class="custom-control-input"
                            value="air"
                            checked
                          />
                          <label class="custom-control-label" for="mode_air"
                            >A&eacute;reo</label
                          >
                        </div>
                        <div
                          class="custom-control custom-radio custom-control-inline"
                        >
                          <input
                            type="radio"
                            id="mode_sea"
                            name="transport_mode"
                            class="custom-control-input"
                            value="sea"
                          />
                          <label class="custom-control-label" for="mode_sea"
                            >Mar&iacute;timo</label
                          >
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="form-group">
                    <label for="incoterm">Incoterm</label>
                    <select id="incoterm" name="incoterm" class="form-control">
                      <option value="">INCOTERM</option>
                      <option value="exw">EXW</option>
                      <option value="fob">FOB</option>
                      <option value="cfr_cif">CFR/CIF</option>
                      <option value="ddu_ddp">DDU/DDP</option>
                    </select>
                  </div>
                  <div class="row">
                    <div class="form-group col-md-6">
                      <label for="origin">Origen</label>
                      <input
                        type="text"
                        id="origin"
                        name="origin"
                        class="form-control"
                        placeholder="Origen"
                      />
                    </div>
                    <div class="form-group col-md-6">
                      <label for="destination">Destino</label>
                      <input
                        type="text"
                        id="destination"
                        name="destination"
                        class="form-control"
                        placeholder="Destino"
                      />
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="product">Producto</label>
                    <input
                      type="text"
                      id="product"
                      name="product"
                      class="form-control"
                      placeholder="Producto"
                    />
                  </div>
                </div>
                <div class="col-lg-6">
                  <h5 class="text-black mb-3">Perfil de la empresa</h5>
                  <div class="row">
                    <div class="form-group col-md-6">
                      <label for="company_name">Raz&oacute;n social</label>
                      <input
                        type="text"
                        id="company_name"
                        name="company_name"
                        class="form-control"
                        placeholder="Razón social"
                      />
                    </div>
                    <div class="form-group col-md-6">
                      <label for="contact_name">Contacto</label>
                      <input
                        type="text"
                        id="contact_name"
                        name="contact_name"
                        class="form-control"
                        placeholder="Contacto"
                      />
                    </div>
                  </div>
                  <div class="row">
                    <div class="form-group col-md-6">
                      <label for="phone">Tel&eacute;fono</label>
                      <input
                        type="tel"
                        id="phone"
                        name="phone"
                        class="form-control"
                        placeholder="Teléfono"
                      />
                    </div>
                    <div class="form-group col-md-6">
                      <label for="email">E-mail</label>
                      <input
                        type="email"
                        id="email"
                        name="email"
                        class="form-control"
                        placeholder="E-mail"
                      />
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="comments">Comentarios</label>
                    <textarea
                      id="comments"
                      name="comments"
                      class="form-control"
                      rows="5"
                      placeholder="Comentarios"></textarea>
                  </div>
                </div>
              </div>
              <div class="form-group mb-0 text-center">
                <button
                  type="submit"
                  class="btn btn-primary text-white py-2 px-4">Enviar</button
                >
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
