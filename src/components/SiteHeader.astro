---
const { active = "" } = Astro.props;
const isActive = (key: string) => (active === key ? "active" : "");
const isServices = active === "services" ? " active" : "";
---

<div class="site-mobile-menu">
  <div class="site-mobile-menu-header">
    <div class="site-mobile-menu-close mt-3">
      <span class="icon-close2 js-menu-toggle"></span>
    </div>
  </div>
  <div class="site-mobile-menu-body"></div>
</div>

<header class="site-navbar py-3" role="banner">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-11 col-xl-2">
        <h1 class="mb-0"><a href="/" class="text-white h2 mb-0">ACGT</a></h1>
      </div>
      <div class="col-12 col-md-10 d-none d-xl-block">
        <nav class="site-navigation position-relative text-right" role="navigation">
          <ul class="site-menu js-clone-nav mx-auto d-none d-lg-block">
            <li class={isActive("home")}><a href="/">Inicio</a></li>
            <li class={isActive("about")}><a href="/about">Nosotros</a></li>
            <li class={`has-children${isServices}`}>
              <a href="/services">Servicios</a>
              <ul class="dropdown">
                <li><a href="#">Transporte a&eacute;reo</a></li>
                <li><a href="#">Transporte mar&iacute;timo</a></li>
                <li><a href="#">Transporte terrestre</a></li>
                <li><a href="#">Almacenamiento</a></li>
                <li><a href="#">Seguro de carga</a></li>
              </ul>
            </li>
            <li class={isActive("industries")}><a href="/industries">Sectores</a></li>
            <li class={isActive("contact")}><a href="/contact">Contacto</a></li>
            <li class={isActive("contact")}><a class="btn btn-primary px-5 text-white" href="/contact">Tracking</a></li>
          </ul>
        </nav>
      </div>

      <div class="d-inline-block d-xl-none ml-md-0 mr-auto py-3" style="position: relative; top: 3px;">
        <a href="#" class="site-menu-toggle js-menu-toggle text-white"><span class="icon-menu h3"></span></a>
      </div>
    </div>
  </div>
</header>
